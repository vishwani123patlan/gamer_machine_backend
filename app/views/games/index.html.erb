<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table id="games-table" class="dispaly" style="width: 100%;">
  <thead>
    <tr>
      <th>Name</th>
      <th>Game Type</th>
      <th>Created By</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.game_type %></td>
        <td><%= game.gameable.name %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
