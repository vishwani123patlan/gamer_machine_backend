<div class="container">
  <%= link_to "Add Team", new_team_path, data: { turbolinks: false }, class:"btn btn-primary text-white" %>
  <table id="teams-table" class="dispaly table table-striped-5 border">
    <thead style="background-color: rgb(0, 65, 114);" >
      <tr>
        <th scope="col" class="text-white fs-5">Name</th>
        <th scope="col" class="text-white fs-5"></th>
        <th scope="col" class="text-white fs-5">Created By</th>
        <th scope="col" class="text-center text-white fs-5">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @teams.each do |team| %>
        <tr class="text-start">
          <td><%= team.team_name %></td>
          <td></td>
          <td></td>
          <td class="text-center">
            <%= link_to 'Show', team, class:"btn btn-sm text-dark ", style:"background-color: #E2DE09;" %> |
            <%= link_to 'Edit', edit_team_path(team), data: { turbolinks: false }, class:"btn btn-sm text-white", style:"background-color: green;" %> |
            <%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-sm text-white ", style:"background-color: #B51C07;" %>
          </td>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>
