<fieldset class="nested-players-form">
	<div class="row">
    <%= f.hidden_field :id %>
		<div class="col-lg-4">
			<%= f.label :name  %>
			<%= f.text_field :name,  class: 'form-control' %>
		</div>
		<div class="col-lg-4">
			<%= f.label :phone_number %>
			<%= f.text_field :phone_number, class: 'form-control' %>
		</div>
		<div class="col-lg-4">
			<%= f.hidden_field :_destroy %>
			<label></label>
	  		<%= link_to "remove", 'javascript:void(0)', class: "remove_fields remove_player_button btn btn-danger mt-4" %>
		</div>
	</div>
</fieldset>
