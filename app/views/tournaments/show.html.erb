<div class="container-fluid mt-5 border rounded-4 shadow-lg">
  <div class="row text-center p-4 pb-0 pe-lg-0 py-lg-3 align-items-center border shadow-lg">
  	<div class="col-2">
  		<%= link_to ('<i class="fa fa-arrow-left"></i>').html_safe, tournaments_path, class:"mx-5 text-dark fs-2 align-items-start "%>	
  	</div>
  	<div class="col-7">
			<h2 class="text-center"> Tournament (<%= @tournament.id %>) </h2>		
  	</div>
  	  	<div class="col-3">
			<%= link_to 'Add Team For Tournament',new_tournament_tournament_registration_path(@tournament),class:"btn text-white fs-5", style:"background-color: rgb(0, 65, 114);" %>		
  	</div>
  </div>
</div>

<div class="container-fluid border shadow-lg mt-5 " style="width: 100%;">
	<div class="row text-center p-4 pb-0 pe-lg-0 py-lg-3 align-items-center border shadow-lg">
		<div class="col">
			<div class="container-fluid border shadow-sm my-5">
				<div class="row mt-3 text-start">
					<div class="col-md-4">
						<p> (Name) : </p> 
						<p class="fw-bold fs-3"><%= @tournament.name %></p>
					</div>	
					<div class="col-md-4 ">
						<p> (Start Date) : </p>
						<p class="fw-bold fs-3"><%= @tournament.start_date %></p>
					</div>
					<div class="col-md-4">
						<p> (End_Date) : </p>
						<p class="fw-bold fs-3"><%= @tournament.end_date %></p>
					</div>
				</div>
				<div class="row mt-3 text-start">	
					<div class="col-md-4">
						<p> (Tournament Type) : </p>
						<p class="fw-bold fs-3"><%= @tournament.tournamentable_type %></p>
					</div>
					<div class="col-md-4">
						<p> (Game Id) : </p>
						<p class="fw-bold fs-3"><%= (@tournament.game_id) %></p>
					</div>
					<div class="col-md-4">
						<p> (Entry Fee) : </p>
						<p class="fw-bold fs-3"><%= @tournament.entry_fee %></p>
					</div>
				</div>
				<div class="row mt-3 text-start">	
					<div class="col-md-4">
						<p> (Number of Winners) : </p>
						<p class="fw-bold fs-3"><%= @tournament.no_of_winners %></p>
					</div>
					<div class="col-md-4">
						<p> (Winner 1 Prize) : </p>
						<p class="fw-bold fs-3"><%= @tournament.winner_1_prize %></p>
					</div>
					<div class="col-md-4">
						<p> (Winner 2 Prize) : </p>
						<p class="fw-bold fs-3"><%= @tournament.winner_2_prize %></p>
					</div>
				</div>
				<div class="row mt-3 text-start">	
					<div class="col-md-4">
						<p> (Winner 3 Prize) : </p>
						<p class="fw-bold fs-3"><%= @tournament.winner_3_prize %></p>
					</div>	
					<div class="col-md-4">
						<p> (Total Teams) : </p>
						<p class="fw-bold fs-3"><%= @tournament.max_team %>)</p>
					</div>
					<div class="col-md-4">
						<p> (Status) : </p>
						<p class="fw-bold fs-3"><%= @tournament.status %>)</p>
					</div>
				</div>
			</div>
		</div>	
	</div>
</div>		
