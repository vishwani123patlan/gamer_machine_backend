<table id="tournaments-table" class="dispaly table table-striped-5 border ">
  <thead style="background-color: rgb(0, 65, 114);" >
    <tr>
      <th scope="col" class="text-white fs-5">Name</th>-
      <th scope="col" class="text-white fs-5">Game</th>
      <th scope="col" class="text-white fs-5">Owner</th>
      <th scope="col" class="text-white fs-5">Participated Team</th>
      <th scope="col" class="text-white fs-5">Status</th>
      <th scope="col" class="text-center text-white fs-5">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @tournaments.each do |tournament| %>
      <tr class="text-start">
        <td><%= tournament.name %></td>
        <td><%= tournament.game&.name %></td>
        <td><%= tournament.tournamentable.name %></td>
        <td><%= tournament.participant_teams.count %></td>
        <td><%= tournament.status&.capitalize %></td>
        <td class="text-center">
          <%= link_to 'Show', tournament, class:"btn btn-sm text-dark ", style:"background-color: #E2DE09;" %> |
          <%= link_to 'Edit', edit_tournament_path(tournament),class:"btn btn-sm text-white ", style:"background-color: green;" %> |
          <%= link_to 'Destroy', tournament, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-sm text-white ", style:"background-color: #B51C07;" %>
        </td>
      </tr>
    <%end%>
  </tbody>
</table>
